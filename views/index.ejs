<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Image Optimizer</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Geist Font -->
    <link
      href="https://api.fontshare.com/v2/css?f[]=geist@400,500,600,700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Geist", sans-serif;
      }
    </style>
  </head>

  <body
    class="min-h-screen bg-gray-50 flex flex-col items-center justify-center px-4 py-3"
  >
    <div class="w-full max-w-2xl bg-white p-8 rounded-2xl shadow-md">
      <h1 class="text-2xl font-semibold mb-6 text-center text-gray-800">
        üñºÔ∏è NodeOps Image Optimizer
      </h1>

      <form id="optimizerForm" class="space-y-5">
        <!-- Upload Box -->
        <div
          id="uploadBox"
          class="w-full border-2 border-dashed border-gray-300 rounded-xl flex flex-col items-center justify-center p-10 text-gray-500 cursor-pointer hover:border-blue-500 transition"
          onclick="document.getElementById('fileInput').click()"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-10 w-10 mb-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M7 16V4m0 0l4 4m-4-4L3 8m13 8h6m-3-3v6"
            />
          </svg>
          <p id="uploadText">Click to upload image</p>
          <input
            type="file"
            id="fileInput"
            name="image"
            accept="image/*"
            class="hidden"
          />
        </div>

        <!-- OR Separator -->
        <div class="text-center text-gray-400">or</div>

        <!-- External URL Input -->
        <input
          id="imageUrl"
          type="url"
          name="imageUrl"
          placeholder="Enter external image URL"
          class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"
        />

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full py-3 rounded-xl bg-blue-600 text-white font-medium hover:bg-blue-700 transition"
        >
          Optimize Image
        </button>
      </form>

      <!-- Output -->
      <div id="output" class="mt-6"></div>
    </div>

    <div class="w-full max-w-2xl mt-3 text-sm">
        <div class="flex flex-col items-end justify-end gap-1">
            <a class="text-blue-600 hover:underline" href="/docs">Visit API Documentation</a>
            <p>Creator: <a class="text-blue-600 hover:underline" href="https://x.com/krshishir_">@krshishir_</a> </p>
        </div>
    </div>

    <script>
      const fileInput = document.getElementById("fileInput");
      const imageUrlInput = document.getElementById("imageUrl");
      const uploadText = document.getElementById("uploadText");
      const form = document.getElementById("optimizerForm");
      const output = document.getElementById("output");

      // If file is chosen, hide URL input
      fileInput.addEventListener("change", () => {
        if (fileInput.files.length > 0) {
          imageUrlInput.value = "";
          //   imageUrlInput.parentElement.classList.add("hidden");
          uploadText.textContent = fileInput.files[0].name;
        } else {
          imageUrlInput.parentElement.classList.remove("hidden");
        }
      });

      // If URL is entered, hide file upload box
      imageUrlInput.addEventListener("input", () => {
        if (imageUrlInput.value.trim()) {
          //   document.getElementById("uploadBox").classList.add("hidden");
        } else {
          document.getElementById("uploadBox").classList.remove("hidden");
        }
      });

      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        output.innerHTML = `<p class="text-gray-600">‚è≥ Optimizing image...</p>`;

        try {
          const formData = new FormData();
          const file = fileInput.files[0];
          const imageUrl = imageUrlInput.value.trim();

          if (file) formData.append("image", file);
          else if (imageUrl) formData.append("imageUrl", imageUrl);
          else throw new Error("Please upload an image or enter a URL.");

          const endpoint = file ? "/compress" : "/compress/url";

          let res;

          if (file) {
            res = await fetch(endpoint, { method: "POST", body: formData });
          } else {
            console.log("this runs up");
            res = await fetch(endpoint, {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({
                imageUrl,
              }),
            });
          }

          const result = await res.json();

          if (res.ok) {
            output.innerHTML = `
              <div class="mt-6 bg-green-50 p-4 rounded-xl">
                <h2 class="text-lg font-semibold mb-2 text-green-700">‚úÖ Optimization Complete</h2>
                <p><strong>Optimized URL:</strong> 
                  <a href="${result.optimized_url}" target="_blank" class="text-blue-600 underline">${result.optimized_url}</a>
                </p>
                <p><strong>IPFS CID:</strong> <code>${result.ipfs_cid}</code></p>
                <p><strong>Size Reduction:</strong> ${result.size_reduction}</p>
                <img src="${result.optimized_url}" alt="Optimized Image" class="mt-4 rounded-lg border w-full" />
              </div>
            `;
          } else {
            output.innerHTML = `<p class="text-red-600">‚ùå ${
              result.error || "Something went wrong"
            }</p>`;
          }
        } catch (err) {
          console.error(err);
          output.innerHTML = `<p class="text-red-600">‚ùå ${err.message}</p>`;
        }
      });
    </script>
  </body>
</html>
